# Server Configuration
PORT=3000
NODE_ENV=development

# Database
DATABASE_URL=./data/app.db

# Application URL
APP_URL=http://localhost:5173

# Stripe Configuration
# Get these from your Stripe Dashboard: https://dashboard.stripe.com/
STRIPE_SECRET_KEY=sk_test_your_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Stripe Price IDs - Role-Specific Plans (create these in Stripe Dashboard > Products)
# Food Truck Plans
STRIPE_PRICE_TRUCK_BASIC=price_truck_basic      # $49/month
STRIPE_PRICE_TRUCK_PRO=price_truck_pro          # $149/month

# Event Organizer Plans
STRIPE_PRICE_ORG_BASIC=price_org_basic          # $49/month
STRIPE_PRICE_ORG_PRO=price_org_pro              # $99/month

# User/Foodie Plans
STRIPE_PRICE_USER_BASIC=price_user_basic        # $4.99/month
STRIPE_PRICE_USER_PRO=price_user_pro            # $19.99/month

# Session Secret (generate a random string for production)
SESSION_SECRET=your_session_secret_here

# Email Service (optional - for transactional emails)
RESEND_API_KEY=re_your_resend_api_key

# OIDC Configuration (for Replit Auth)
ISSUER_URL=https://replit.com/oidc
REPL_ID=your_repl_id
